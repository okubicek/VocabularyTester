@model VocabularyPracticeWeb.Models.Authentication.PasswordResetViewModel
@{
    ViewData["Title"] = "ConfirmPasswordReset";
}
<h2>Reset password</h2>
<div class="container">
    <div class="row">
        <div asp-validation-summary="All" class="text-danger"></div>
        <form asp-route="" method="post">
            <input type="hidden" asp-for="@Model.Code">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.Email"></label>
                <input asp-for="@Model.Email" class="form-control">
            </div>
            <div class="form-group">
                <label asp-for="@Model.Password"></label>
                <input asp-for="@Model.Password" class="form-control" type="password">
            </div>
            <div class="form-group">
                <label asp-for="@Model.ConfirmPassword"></label>
                <input asp-for="@Model.ConfirmPassword" class="form-control" type="password">
            </div>
            <div class="form-group">
                <button class="btn btn-secondary">Submit</button>
            </div>
        </form>
    </div>
</div>